<br>
<a href="/user/new" class="btn input">New User</a>
<h4>List of User</h4>
<div class='table-responsive'>
  <table class='table table-hover table-condensed' border="1">
    <% if (!_.isEmpty(users)) { %>
    <tr>
      <th class="col-md-2"> Username </th>
      <th class="col-md-2"> Display name </th>
      <th class="col-md-2"> phone </th>
      <th class="col-md-2"> Action</th>
    </tr>
    <% } %>
    <% _.forEach(users, function(user) { %>
    <tr data-id="<%=user.id %>" data-model="user">
      <td class="col-md-2"><%=user.email %></td>
      <th class="col-md-2"><%=user.fullname ? user.fullname:'' %></th>
      <th class="col-md-2"><%=user.phone ? user.phone:'' %></th>
      <th class="col-md-2"><a href="/user/destroy/<%=user.id %>">Delete</a> | <a href="/user/edit/<%=user.id %>">Update</a></th>
    </tr>
    <% }) %>
  </table>
</div>

