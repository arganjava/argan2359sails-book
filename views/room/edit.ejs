<form action="/room/update/<%= room.id %>" method="POST" role="form" class="new col-md-6">
  <div class="form-group">
    <h2>Edit Room</h2>
    <div class="form-group">
      <input type="text" required class="form-control" placeholder="Type" name="type" value="<%= room.type %>">
    </div>

    <div class="form-group">
      <input type="number" required class="form-control" placeholder="enter quantity" name="quantity"
             value="<%= room.quantity %>">
    </div>

    <div class="form-group">
      <input type="number" required class="form-control" placeholder="enter price, eg: 20000000" name="price"
             value="<%= room.price %>">
    </div>

    <div class="form-group">
      <textarea class="form-control" required placeholder="enter Desc"
                name="description"><%= room.description %></textarea>
    </div>

    <input type="submit" value="Submit" class="btn btn-default">
  </div>
</form>

